<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
      android:background="@drawable/mainmenu1"
    tools:context=".ModoJuegoActivity" >

       <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >
      
          
    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingRight="70dp"
        android:gravity="end" >

     

        <LinearLayout
            android:layout_width="1000dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"  
            android:orientation="vertical" >
            
               <ImageButton
        android:id="@+id/btnDetective"
        android:layout_marginTop="100dp"
        android:layout_width="440dp"
        android:layout_height="120dp"   
        android:layout_marginLeft="250dp"  
        android:layout_gravity="center_horizontal" 
          android:background="@drawable/boton_jugar_detective"  
        android:text="@string/JugarAgente1"
         />

    <ImageButton
        android:id="@+id/btnEspia"
        android:layout_marginTop="50dp"
        android:layout_width="440dp"
        android:layout_height="120dp"  
        android:layout_marginLeft="250dp"
        android:layout_gravity="center_horizontal"
          android:background="@drawable/boton_jugar_espia"
        android:text="@string/JugarAgente2" 
        />

      </LinearLayout>
        
    </RelativeLayout>
    
</RelativeLayout>

</RelativeLayout>